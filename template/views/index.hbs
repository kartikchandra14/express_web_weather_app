<html>
    <head>
      {{>headTagContent}}
    </head>
    <body>
      {{>bodyTagScript}}
        {{!-- Header --}}
        {{>header}}
        <div class="container-fluid main_header">
          <div class="row">
            <div class="col-md-10 col-12 mx-auto">
              <div class="row">
                <!-- Left Side -->
                <div class="col-md-6 col-12 main_header_left">
                    <p>
                        Welcome to weather app
                    </p>
                    <h1>
                        Get the latest 
                        <span>
                            Weather
                        </span>
                        info of your city 
                    </h1>
                    <a href="/weather">
                        <button>
                            check now
                        </button>
                    </a>
                </div>
                <!-- Right Side -->
                <div class="col-md-6 col-12 main_header_right">
                    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img class="w-100 img-fluid" src="images/weather4.jpg" alt="First slide" >
                          </div>
                          <div class="carousel-item">
                            <img class="w-100 " src="images/weather5.jpg" alt="Second slide">
                          </div>
                          <div class="carousel-item">
                            <img class="w-100" src="images/weather4.jpg" alt="Third slide">
                          </div>
                        </div>
                      </div>
                </div>
              </div>
            </div>
          </div>
          
        </div>
        {{>footer }}
    </body>
